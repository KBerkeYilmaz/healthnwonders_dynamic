//- Footer
footer.footer
    .footer-primary
        .container
            .row
                .col-sm-12.col-md-12.col-lg-3
                    .footer-widget-about
                        img(src="/images/logo/H&W koyu zemin .png" alt="logo" class="mb-30")
                        p.color-gray=t("footer.description")
                        a(href="appointment.html" class="btn btn__primary btn__primary-style2 btn__link")
