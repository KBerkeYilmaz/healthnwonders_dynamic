        p.heading__desc.color-secondary.font-weight-bold.mb-30= t('index.map.description')
        .d-flex.align-items-center.mb-60
          if currentLanguage === 'tr'
            a.btn.btn__secondary.btn__rounded.mr-30(href="/bize-ulasin")
