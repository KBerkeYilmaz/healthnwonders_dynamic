          if currentLanguage === 'en'
            a.btn.btn__secondary.btn__rounded.mr-30(href="/contact-us")
              i.fas.fa-heart
              span= t('index.map.button')
          if currentLanguage === 'fr'
            a.btn.btn__secondary.btn__rounded.mr-30(href="/contactez-nous")
              i.fas.fa-heart
              span= t('index.map.button')
          if currentLanguage === 'de'
            a.btn.btn__secondary.btn__rounded.mr-30(href="/kontaktiere-uns")
              i.fas.fa-heart
              span= t('index.map.button')
          if currentLanguage === 'tr'
            a.btn.btn__secondary.btn__outlined.btn__rounded.mr-30(href="/hakkimizda")= t('route_titles.about_us_page_title')  
          if currentLanguage === 'en'
            a.btn.btn__secondary.btn__outlined.btn__rounded.mr-30(href="/about_us")= t('route_titles.about_us_page_title')  
