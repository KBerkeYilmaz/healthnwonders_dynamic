.about-layout5.mt-60.mb-60
  .container
    .row
      .col-sm-12.col-md-12.col-lg-5
        .heading-layout2
          h3.heading__title.mb-80= t('index.map.title')
        .map-wrapper.mb-50(style="position: relative")
          img(src="/images/backgrounds/turkey_vector.webp", alt="map")
          .tooltip-box(style="position: absolute; top: 50%; left: 2rem")
            .tooltip__icon
              i.fas.fa-plus
            .tooltip__panel
              p.tooltip__title.mb-0 Söke, Aydın
