#form-tr.form-section(style='display: block;')
    .form-row
        .form-group.col-md-12
            label(for="name") Tedavi İsmi (TR):
            input#name.form-control(type="text" name="name[tr]", required=false style='border-radius:5px;!important, padding-left: 0;!important')
    .form-row
        .form-group.col-md-12
            label(for="subTitle") Alt Başlık (TR):
            textarea#subTitle.form-control.form-control-sm(type="text" name="subTitle[tr]", required=false style='border-radius:5px;!important padding: 1px 1px;!important')
    //- Biyografi Section with Multilanguage Support
    .d-flex.justify-content-between.align-items-center.mb-2
        h3 Paragraf Düzeni
        .d-flex(style="gap: 10px;")
            button.btn.btn-primary.col-md-1(type="button" id="addParagraphBtn_tr") Yeni Paragraf Ekle
            button.btn.btn-danger.col-md-1(type="button" id="removeParagraphBtn_tr") Paragraf Çıkar
    .paragraph-column#paragraph-column-tr   
        .form-row.mb-20
            .form-group.mb-2.col-md-12
                label(for="description") Paragraf Detay (TR):
                textarea#description.form-control(name="description[0][tr]", required=false style='border-radius:5px;!important padding: 1px 1px;!important')
    button.btn.btn-primary.btn__outlined.mb-20.col-12(type="submit" style="background-color: blue; color: white; ") Yeni Tedavi Ekle
