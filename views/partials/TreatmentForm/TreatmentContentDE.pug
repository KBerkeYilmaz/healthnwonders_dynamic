#form-de.form-section(style='display: none;')
    .form-row
        .form-group.col-md-12
            label(for="name") Tedavi İsmi (DE):
            input#name.form-control(type="text" name="name[de]", required=false style='border-radius:5px;!important, padding-left: 0;!important')
    .form-row
        .form-group.col-md-12
            label(for="subTitle") Alt Başlık (DE):
            textarea#subTitle.form-control.form-control-sm(type="text" name="subTitle[de]", required=false style='border-radius:5px;!important padding: 1px 1px;!important')
    //- Biyografi Section with Multilanguage Support
    .d-flex.justify-content-between.align-items-center.mb-2
        h3 Paragraf Düzeni
        .d-flex(style="gap: 10px;")
            button.btn.btn-primary.col-md-1(type="button" id="addParagraphBtn_de") Yeni Paragraf Ekle
            button.btn.btn-danger.col-md-1(type="button" id="removeParagraphBtn_de") Paragraf Çıkar
    .paragraph-column#paragraph-column-de   
        .form-row.mb-20
            .form-group.mb-2.col-md-12
                label(for="description") Paragraf Detay (DE):
                textarea#description.form-control(name="description[0][de]", required=false style='border-radius:5px;!important padding: 1px 1px;!important')
    button.btn.btn-primary.btn__outlined.mb-20.col-12(type="submit" style="background-color: blue; color: white; ") Yeni Tedavi Ekle
