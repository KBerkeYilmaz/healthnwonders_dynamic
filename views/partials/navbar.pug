    nav.navbar.navbar-expand-lg.sticky-navbar
        .container-fluid
            a.navbar-brand(href='/')
                img(src='/images/logo/H&W ikincil.png' alt='logo-brand' style='height: auto; width: 160px')
            button.navbar-toggler(type='button')
                span.menu-lines
                    span 
            .collapse.navbar-collapse#mainNavigation
                ul.navbar-nav.ml-auto
                    li.nav__item
                        a(href='/' class='nav__item-link')=t("navbar.home")
                    li.nav__item.has-dropdown
                        a(data-toggle='dropdown' class='dropdown-toggle nav__item-link')=t("navbar.about_us.title")
                        ul.dropdown-menu
                            li.nav__item
                                a(href='/about-us' class='nav__item-link')=t("navbar.about_us.sub-menu.who-are-we")
                            li.nav__item
                                a(href='/services' class='nav__item-link')=t("navbar.about_us.sub-menu.services")
                            li.nav__item
                                a(href='/faq' class='nav__item-link')=t("navbar.about_us.sub-menu.faq")
                    li.nav__item.has-dropdown
                        a(data-toggle='dropdown' class='dropdown-toggle nav__item-link')=t("navbar.doctors")
                        ul.dropdown-menu
                            each doctor in doctors ? doctors : []
                                li.nav__item
                                    //- .split(' ').join('-')
                                    a(href=`/doctors/${doctor.name.split(' ').join('-')}` class='nav__item-link')= doctor.name
                    li.nav__item
                        a(href='/blog' class='nav__item-link')=t("navbar.blog")
                    li.nav__item.has-dropdown
                        a(data-toggle='dropdown' class='dropdown-toggle nav__item-link')=t("navbar.treatments")
                        ul.dropdown-menu
                            each treatment in treatments ? treatments : []
                                li.nav__item
                                    a(href=`/treatments/${treatment.name.split(' ').join('-')}` class='nav__item-link')= treatment.name
                    //- li.nav__item
                    //-     a(href='contact-us.html' class='nav__item-link') Bize Ulaşın
            .d-none.d-xl-flex.align-items-center.position-relative.ml-0
                a(href='/appointment' class='btn btn__primary btn__rounded ml-30')
                    i.icon-calendar
                    span=t("navbar.appointment")
            //- Language Dropdown
            - var languages = {en: 'English', tr: 'Türkçe', de: 'Deustch', fr: 'Français'}
            - var flags = {en: '/images/flags/en.png', tr: '/images/flags/tr.png', de: '/images/flags/gr.png', fr: '/images/flags/fr.png'}
            .dropdown.dropdown--style2(style='margin-left: 30px;')
                a.dropdown-toggle(href='#', role='button', id='dropdownLanguage', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                    img(src=flags[currentLanguage] alt='flag', style='height: 20px; width: 25px; margin-right: 10px;')
                ul.dropdown-menu(aria-labelledby='dropdownLanguage')
                    each val, key in languages
                        if key != currentLanguage
                            li
                                a.dropdown-item(href='/?lng=' + key)
                                    img(src=flags[key] alt='flag', style='height: 20px; width: 25px; margin-right: 5px;')
                                    span= val
