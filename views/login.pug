//- views/login.pug
extends layout

block content
    .d-flex.justify-content-center.align-items-center(style='min-height: 75vh;')
        .col-md-4.d-flex.flex-column.justify-content-center.align-items-center
            h1 Login
            form(action="/login" method="post")
                div(style='margin-bottom: 20px;')
                    label(for="userMail") E-mail:
                    input(type="mail" name="userMail" required)
                div(style='margin-bottom: 20px;')
                    label(for="password") Parola:
                    input(type="password" name="password" required)
                button.btn(type="submit") Login
