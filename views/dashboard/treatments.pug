extends ../layout

block content
  .container-fluid(style='display: flex; height: 100vh;')
    .row.flex-grow-1
      //- Sidebar with full viewport height and sticky behavior
      .col-md-3.col-lg-2.d-md-block.bg-light.sidebar.collapse(style='min-height: 100vh; overflow-y: auto;')
        ul.nav.flex-column(style='font-size: 20px; margin-top: 20px;')
          li.nav-item
            a.nav-link(href="/dashboard") Panel
          li.nav-item
            a.nav-link.active(href="#") Mesajlar
          li.nav-item
            a.nav-link(href="/dashboard/treatments") Tedaviler
          li.nav-item
            a.nav-link(href="/dashboard/doctors") Doktorlar
          li.nav-item
            a.nav-link(href="#") Hastaneler
      //- Main content with scrollable behavior
      .col-md-9.ml-sm-auto.col-lg-10.px-md-4#mainContent(style='overflow-y: auto;')
        include ../partials/new_treatment.pug
        //- #newDoctorForm(style='display: none;')
        //-   include ../partials/new_treatment.pug
        div.container-fluid
          .row
            .col-md-12
              .d-flex.justify-content-between.align-items-center.mt-4.mb-4
                h1 Tedaviler
                button#toggleFormButton.btn.btn-info Yeni Tedavi Ekle
              table#doctorsTable.table.table-striped.table-bordered.table-hover
                thead
                  tr
                    th İsim
                tbody
                  each treatment in treatments
                    tr
                      td= treatment.name
                      td
                        a.btn.btn-primary Düzenle
                        a.btn.btn-danger.delete-btn Sil

block append scripts
  script(src="/javascripts/dashboard/treatmentDashboard.js")
