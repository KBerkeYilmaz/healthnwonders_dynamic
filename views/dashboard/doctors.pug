extends ../layout

block content
  .container-fluid(style='display: flex; height: 100vh;')
    .row.flex-grow-1
      //- Sidebar with full viewport height and sticky behavior
      include ../partials/sidebar.pug
      //- Main content with scrollable behavior
      .col-md-9.ml-sm-auto.col-lg-10.px-md-4#mainContent(style='overflow-y: auto;')        
        div.container-fluid
          .row
            .col-md-12
              .d-flex.justify-content-between.align-items-center.mt-4.mb-4
                h1 Doktorlar
              .d-flex.justify-content-between.align-items-center.mt-4.mb-4
                button#toggleBackButton.btn.btn-info(style="display:none;") Geri 
                button#toggleFormButton.btn.btn-info Yeni Doktor Ekle
              include ../partials/doctors_table.pug
        #newDoctorForm(style='display: none;')
          include ../partials/new_doctor.pug


block append scripts
  script(src="/javascripts/dashboard/DoctorsDashboard.js")
